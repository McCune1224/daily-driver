package templates

import "daily-driver/web/static/templates/panel"
import "daily-driver/internal/routes"
import "strconv"
import "fmt"

templ Index() {
	@Base() {
		<div
			hx-swap="innerHTML"
			hx-target="#panel-index"
			hx-get={ routes.PanelIndex }
			hx-trigger={ fmt.Sprintf("load, every %ss", strconv.Itoa(routes.PanelRotationIntervalSeconds)) }
		></div>
		<div
			id="panel-root"
			hx-target="#current-panel"
			hx-swap="innerHTML"
			hx-get={ routes.PanelBase }
			hx-trigger={ fmt.Sprintf("load, every %ss", strconv.Itoa(routes.PanelRotationIntervalSeconds)) }
		></div>
		@panel.PanelManager()
	}
}
