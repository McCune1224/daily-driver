package templates

import "daily-driver/web/static/templates/panel"

templ Index() {
	@Base() {
		<div
			id="panel-root"
			hx-target="#current-panel"
			hx-swap="innerHTML"
			hx-get="/panel"
			hx-trigger="load, every 30s"
					hx-indicator="#loading-indicator"
			class="htmx-swapping"
		>
		<!-- Loading Indicator -->
		<div id="loading-indicator" class="hidden">Loading...</div>
			@panel.Panel() {
				<div id="current-panel" class="h-full"></div>
			}
		</div>
	}
}
